        </div>
    </div>
    <!-- END SECTION HOME -->
    <!-- SECTION FEATURES -->
    <div class="section " id="section1" data-anchor ="Features">
        <div class="wrap">
            <div class="box">
                <!-- SECTION FEATURES CONTENT -->
                <h1><strong>How To Play</strong> </h1>
                <!-- END SECTION FEATURES CONTENT -->
            </div>
        </div>
    </div>
