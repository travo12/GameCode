        <div class="wrap">
            <div class="box">
                <!-- SECTION ABOUT CONTENT -->
                <h1><strong>Answer</strong> The Question</h1>
                <p>
                </p>
            </div>
        </div>
    </div>
    <!-- END SECTION ABOUT -->
    <!-- SECTION VIDEO -->
    <div class="section" id="section3" data-anchor ="Clients">
        <div class="wrap">
            <div class="box">
                <!-- SECTION VIDEO CONTENT -->
                <h1> <strong>Pick</strong> Your Favorite Answer</h1>
                <!-- END SECTION VIDEO CONTENT-->
            </div>
        </div>
    </div>
    <!-- END SECTION VIDEO -->
    <!-- SECTION CLIENTS -->
    <!-- END SECTION CLIENTS -->
    <!-- SECTION SCREENSHOTS -->
    <div class="section" id="section4" data-anchor ="Screenshots">
        <div class="wrap">
            <div class="box">
                <div class="fp-tableCell screenshots-content">
                    <!-- SECTION SCREENSHOTS CONTENT -->
                    <h1><strong>View</strong> The Results</h1>
                    <ul class="features">
                        <li><a class="tooltip"><span class="icon flaticon-camera19"></span> Results screen keeps track of score through rounds</a> </li>
                        <li><a class="tooltip"><span class="icon flaticon-arrow96"></span> Play against your friends to see who will win</a> </li>
                        <li><a class="tooltip"><span class="icon flaticon-laptop3"></span> Navigate using keyboard arrows to change screenshots</a> </li>
                    </ul>
                    <!-- END SECTION SCREENSHOTS CONTENT -->
                </div>

            </div>
            <div class="screenshots-wrapper">
                <!-- SECTION SCREENSHOTS IMAGES -->
                <div class="slide" id="slide1" data-anchor="slide1"> <img src="~/images/Results.jpg" alt="screenshot1"> </div>
                <div class="slide" id="slide2" data-anchor="slide2"> <img src="~/images/statistics.jpg" alt="screenshot2"> </div>
                <div class="slide" id="slide3" data-anchor="slide3"> <img src="~/images/WaitingRoom.jpg" alt="screenshot3"> </div>
                <!-- END SECTION SCREENSHOTS IMAGES -->
            </div>
        </div>
    </div>
    <!-- END SECTION SCREENSHOTS -->
    <!-- SECTION DOWNLOAD -->
    <div class="section" id="section5" data-anchor="Download">
        <div class="wrap">
            <div class="box">
                <!-- SECTION DOWNLOAD CONTENT-->
                <h2><strong>Download</strong> the app</h2>
                <p>
                    A better way to present your app using fully featured Unsafe Spaces template.
                    <br> Now available on the App Store and Play Store!
                </p>

               <!-- DOWNLOAD PLAYSTORE-->
                <a href="https://play.google.com/store/apps/details?id=com.planc.unsafespaces" class="simple-button playstore-button"><span class="icon playstore"></span>Play Store</a>
                <!-- DOWNLOAD APPSTORE-->
                <a href="#" class="simple-button appstore-button"><span class="icon appstore"></span>App Store (coming soon)</a>
                <!-- END SECTION DOWNLOAD -->

            </div>
        </div>
    </div>
    <!-- END SECTION DOWNLOAD -->
    <!-- SECTION CONTACT -->
    <div class="section" id="section6" data-anchor ="Contact">
        <div class="wrap">
            <div class="box">
                <!-- SECTION CONTACT CONTENT-->
                <h2><strong>Get</strong> in touch</h2>
                <ul class="features">
                    <li><a class="tooltip" href="#"><span class="icon flaticon-telephone1"></span> Call Us now<span class="tooltip-content"><span class="tooltip-text"><span class="tooltip-inner"><span class="icon flaticon-telephone1"></span>jk just email us </span></span></span></a> </li>
                    <li>
                        <span class="tooltip">
                            <span class="icon flaticon-map5"></span>See our location<span class="tooltip-content">
                                <span class="tooltip-text">
                                    <span class="tooltip-inner">
                                        <span class="icon flaticon-map5"></span>the interwebz
                                        <br><a href="https://www.google.com/maps/dir/33.9736437,-118.2192335/" target="_blank">View Map</a>
                                    </span>
                                </span>
                            </span>
                        </span>
                    </li>
                </ul>
                <ul class="features">
                    <li>
                        <span class="tooltip">
                            <span class="icon flaticon-cursor7"></span>Official Website <span class="tooltip-content">
                                <span class="tooltip-text">
                                    <span class="tooltip-inner">
                                        <span class="icon flaticon-cursor7"></span>
                                        <br> <a href="http://unsafespacesgame.com" target="_blank">http://unsafespacesgame.com</a>
                                    </span>
                                </span>
                            </span>
                        </span>
                    </li>
                    <li><a class="tooltip" href="#"><span class="icon flaticon-mail9"></span> Send Email<span class="tooltip-content"><span class="tooltip-text"><span class="tooltip-inner"><span class="icon flaticon-mail9"></span>unsafespacesgame@gmail.com</span></span></span></a> </li>
                </ul>
                <!-- SECTION CONTACT FORM-->
                <form role="form" method="post" id="contact-form">
                    <input type="text" placeholder="Name" name="Name" id="Name" required>
                    <input type="email" placeholder="Email" name="Email" id="Email" required>
                    <input type="text" placeholder="Phone" name="Phone" id="Phone">
                    <input type="text" placeholder="Subject" name="Subject" id="Subject">
                    <textarea placeholder="Message" name="Message" id="Message" required></textarea>
                    <button type="submit" id="submit">Send</button>
                    <div id="success"></div>
                </form>
                <!-- END SECTION CONTACT -->
            </div>
        </div>
    </div>

